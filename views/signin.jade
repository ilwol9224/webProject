extends layout

block content
    .container
        h2.page-header Login 
        form.form-horizontal(role = "form", action='/signin', method='POST')
            .form-group
                label(for='email', class='control-label col-sm-2') Email address :
                .col-sm-10
                  input(
                    type='email', id='email', name='email', class='form-control', 
                    placeholder='Enter email', required, autofocus
                  )
            .form-group      
                label(for='password', class='control-label col-sm-2') Password :
                .col-sm-10
                  input(
                    type='password', id='password', name='password', class='form-control', 
                    placeholder='Enter password', required, autofocus
                  )
        
            .form-group  
                .col-sm-offset-2.col-sm-10          
                    button.btn.btn-lg.btn-default.btn-block(type='submit') 로그인
                      | 
            .form-group  
                .col-sm-offset-2.col-sm-10 
                  a.btn.btn-primary.btn-lg.btn-block(href='/auth/facebook')
                    i.fa.fa-facebook.fa-lg
                    | &nbsp; &nbsp;Signin with Facebook
            hr
            .form-group
                .col-sm-offset-5.col-sm-6
                    a.btn.btn-success.btn-mini(href='/users/new') 회원가입
        
